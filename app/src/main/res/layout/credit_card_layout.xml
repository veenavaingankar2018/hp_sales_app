<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/credit_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/general_gap_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/transaction_type"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s"
            android:textStyle="bold" />

        <!--        <EditText-->
        <!--            android:id="@+id/transaction_edit_text"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:textColor="@color/general_text_color"-->
        <!--            android:backgroundTint="@color/red_color"-->
        <!--            android:textSize="@dimen/font_size_s" />-->
        <Spinner
            android:id="@+id/transaction_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_gap_xs"
            android:layout_marginTop="@dimen/general_gap_xs"
            android:layout_marginRight="@dimen/general_gap_2xs"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:popupBackground="@color/dropdown_Color"
            android:popupElevation="@dimen/card_elevation"
            android:spinnerMode="dropdown"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/driver_name"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/driver_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red_color"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/vehicle_number"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vehicle_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red_color"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s"
            android:textStyle="bold" />

<!--        <EditText-->
<!--            android:id="@+id/product_edit_text"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:backgroundTint="@color/red_color"-->
<!--            android:textColor="@color/general_text_color"-->
<!--            android:textSize="@dimen/font_size_s" />-->
        <Spinner
            android:id="@+id/product_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_gap_xs"
            android:layout_marginTop="@dimen/general_gap_xs"
            android:layout_marginRight="@dimen/general_gap_2xs"
            android:layout_weight="1"
            android:background="@drawable/spinner_bg"
            android:popupBackground="@color/dropdown_Color"
            android:popupElevation="@dimen/card_elevation"
            android:spinnerMode="dropdown"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amount_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red_color"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/font_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_gap_3xs"
            android:layout_weight="1"
            android:background="@color/red_color"
            android:elevation="@dimen/button_elevation"
            android:text="@string/save_btn"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_gap_3xs"
            android:layout_weight="1"
            android:background="@color/red_color"
            android:elevation="@dimen/button_elevation"
            android:text="@string/cancel_btn"
            android:textColor="@color/text_color" />
    </LinearLayout>

</LinearLayout>